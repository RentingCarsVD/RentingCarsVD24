<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.net.URL?>
<AnchorPane prefHeight="403.0" prefWidth="544.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrentingproject.controllers.ClientController">
    <stylesheets>
        <URL value="@/css/register.css" />
    </stylesheets>
    <Label fx:id="firmNameLabel" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px;" text="Клиентски панел" />

    <!-- Наемане на кола -->
    <Button layoutX="27.0" layoutY="280.0" onAction="#rentalWindowButton" text="Заявка за наемане" />

    <!-- Зареждане на наети коли -->
    <Button layoutX="27.0" layoutY="123.0" onAction="#showOwnedCars" prefHeight="26.0" prefWidth="170.0" text="Моите резервации" />
    <ListView fx:id="carlistView" layoutX="242.0" layoutY="225.0" prefHeight="112.0" prefWidth="262.0" />

    <!-- Бутон за изход -->
    <Button fx:id="logoutButton" layoutX="454.0" layoutY="357.0" onAction="#logout" text="Изход" />

    <!-- Зарежда колите -->
    <ListView fx:id="generalListView" layoutX="242.0" layoutY="55.0" prefHeight="119.0" prefWidth="262.0" />
    <Button layoutX="27.0" layoutY="233.0" onAction="#showFirmsCarsList" text="Налични автомобили" />
    <Button layoutX="27.0" layoutY="74.0" onAction="#showFirmsList" prefHeight="26.0" prefWidth="170.0" text="Списък с фирми" />


</AnchorPane>
