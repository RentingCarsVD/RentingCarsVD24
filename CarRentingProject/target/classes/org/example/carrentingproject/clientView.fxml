<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="449.0" prefWidth="724.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrentingproject.controllers.ClientController">

    <Label fx:id="firmNameLabel" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px;" text="Клиентски панел" />

    <!-- Наемане на кола -->
    <Button layoutX="401.0" onAction="#rentalWindowButton" layoutY="371.0" text="Заявка за наемане" />

    <!-- Зареждане на наети коли -->
    <Button layoutX="253.0" layoutY="182.0" prefHeight="26.0" prefWidth="135.0" text="Моите резервации" />
    <ListView fx:id="carlistView" layoutX="253.0" layoutY="246.0" prefHeight="112.0" prefWidth="262.0" />

    <!-- Бутон за изход -->
    <Button fx:id="logoutButton" layoutX="14.0" layoutY="358.0" onAction="#logout" text="Изход" />

    <!-- Зарежда колите -->
    <ListView fx:id="firmsListView" layoutX="253.0" layoutY="55.0" prefHeight="119.0" prefWidth="262.0" />
    <Button layoutX="253.0" layoutY="371.0" onAction="#showFirmsCarsList" text="Налични автомобили" />
    <Button layoutX="14.0" layoutY="75.0" onAction="#showFirmsList" text="Списък с фирми" />
    <Button layoutX="134.0" layoutY="74.0" onAction="#updateClientWithFirm" prefHeight="26.0" prefWidth="106.0" text="Избери фирма" />


</AnchorPane>
